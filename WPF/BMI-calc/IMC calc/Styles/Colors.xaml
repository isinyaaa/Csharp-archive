<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IMC_calc.Styles">

    <Color x:Key="DarkTextBoxForeground">#555</Color>
    <SolidColorBrush x:Key="DarkTextBoxForegroundBrush" Color="{StaticResource DarkTextBoxForeground}"/>

    <Color x:Key="LightTextBlockForeground">#888</Color>
    <SolidColorBrush x:Key="LightTextBlockForegroundBrush" Color="{StaticResource LightTextBlockForeground}"/>

    <Color x:Key="LightButtonBackground">#fefefe</Color>
    <SolidColorBrush x:Key="LightButtonBackgroundBrush" Color="{StaticResource LightButtonBackground}"/>

    <Color x:Key="DarkerTLButtonBackground">#dadada</Color>
    <SolidColorBrush x:Key="DarkerTLButtonBackgroundBrush" Color="{StaticResource DarkerTLButtonBackground}"/>

    <Color x:Key="DarkerBorder">#8a8a8a</Color>
    <SolidColorBrush x:Key="DarkerBorderBrush" Color="{StaticResource DarkerBorder}"/>

    <Color x:Key="NotSoDarkBorder">#acacac</Color>
    <SolidColorBrush x:Key="NotSoDarkBorderBrush" Color="{StaticResource NotSoDarkBorder}"/>

</ResourceDictionary>